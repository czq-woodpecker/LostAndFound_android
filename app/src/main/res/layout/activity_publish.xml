<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/rg_belong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_xunwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="寻物"
                android:textColor="@color/text_gray"
                android:layout_marginRight="40dp"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/rb_xunzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="寻主"
                android:textColor="@color/text_gray"
                />

        </RadioGroup>




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sort" />


        
        <Spinner
            android:id="@+id/sn_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/sortarr"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/name" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bg_white"
            android:hint="请输入物品名称"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/locate" />

        <EditText
            android:id="@+id/et_place"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bg_white"
            android:hint="请输入丢失或捡到地点"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/describe" />

        <EditText
            android:id="@+id/et_miaoshu"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bg_white"
            android:hint="请输入物品描述"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/contact" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:inputType="phone"
            android:background="@color/bg_white"
            android:hint="请输入联系号码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />

    <ImageView
        android:id="@+id/iv_uploadThing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uploadPicture"
        android:src="@drawable/upload" />
    <Button
        android:layout_width="match_parent"


        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="发布"
        android:onClick="publish"
        android:background="@color/bg_blue"
        android:textColor="#fff"
        />

</LinearLayout>
